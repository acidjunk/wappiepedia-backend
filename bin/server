#!/bin/sh
SCRIPT_DIR=$(dirname "$0")
cd "$SCRIPT_DIR/.." || exit

export PYTHONPATH=$PWD
APP=server.main:app
HOST=0.0.0.0
if [ "$HTTP_PORT" ]; then
    PORT=$HTTP_PORT
else
    PORT=8080
fi
PYTHONPATH=. alembic upgrade heads
gunicorn -w 5 -k uvicorn.workers.UvicornWorker --capture-output --access-logfile '-' --error-logfile '-' --bind $HOST:$PORT $APP --timeout 600 "$@"
